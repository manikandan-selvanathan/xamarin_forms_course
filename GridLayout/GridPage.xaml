<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.GridPage">
    <ContentPage.Content>
        <Grid HorizontalOptions="FillAndExpand">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <BoxView Grid.Row="0" HorizontalOptions="FillAndExpand" BackgroundColor="Red"/>
            <BoxView Grid.Row="0" HorizontalOptions="FillAndExpand" BackgroundColor="Yellow"/>
            <BoxView Grid.Row="0" HorizontalOptions="FillAndExpand" BackgroundColor="Green"/>
        </Grid>

    </ContentPage.Content>
</ContentPage>